<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="generic_text">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="screen_title" parent="generic_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">75dp</item>
        <item name="android:layout_marginTop">75dp</item>
        <item name="android:layout_marginBottom">75dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:layout_marginStart">45dp</item>
    </style>

    <style name="text_input_style" parent="generic_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:maxWidth">450dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="addiction_item_text_style" parent="generic_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="minWidth">36dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minHeight">36dp</item>
    </style>


    <style name="button_style" parent="generic_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="minWidth">36dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minHeight">36dp</item>

        <item name="android:radius">2dp</item>
    </style>

</resources>